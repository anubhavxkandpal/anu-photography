---
export interface Props {
  images: Array<{
    src: string;
    alt: string;
    title: string;
    location?: string;
    date?: string;
    category: string;
  }>;
  category: string;
}

const { images, category } = Astro.props;
---

<section class="py-8 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <!-- Category Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gallery-900 mb-4 capitalize">
      {category}
    </h1>
    <p class="text-gallery-600 max-w-2xl mx-auto">
      {category === 'landscapes' && 'Capturing the raw beauty of natural landscapes and scenic vistas.'}
      {category === 'portraits' && 'Professional portrait photography that tells your story.'}
      {category === 'artsy' && 'Creative and artistic photography exploring unique perspectives.'}
      {category === 'events' && 'Documenting special moments and celebrations.'}
    </p>
  </div>

  <!-- Masonry Gallery Grid -->
  <div class="gallery-grid columns-1 sm:columns-2 lg:columns-3 xl:columns-4 gap-4 space-y-4">
    {images.map((image, index) => (
      <div 
        class="gallery-item break-inside-avoid mb-4 group cursor-pointer"
        data-index={index}
      >
        <div class="relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
          <!-- Placeholder with blur effect -->
          <div class="aspect-auto bg-gallery-100 animate-pulse">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          
          <!-- Overlay with image info -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h3 class="text-white font-semibold text-lg mb-1">
                {image.title}
              </h3>
              {image.location && (
                <p class="text-white/80 text-sm mb-1">
                  üìç {image.location}
                </p>
              )}
              {image.date && (
                <p class="text-white/60 text-xs">
                  {image.date}
                </p>
              )}
              <div class="mt-2 text-white/80 text-xs">
                Available as prints
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Empty state -->
  {images.length === 0 && (
    <div class="text-center py-12">
      <div class="text-gallery-400 text-6xl mb-4">üì∑</div>
      <h3 class="text-xl font-semibold text-gallery-700 mb-2">
        Coming Soon
      </h3>
      <p class="text-gallery-600">
        New {category} photographs will be added soon.
      </p>
    </div>
  )}
</section>

<style>
  .gallery-grid {
    column-gap: 1rem;
  }
  
  .gallery-item {
    display: inline-block;
    width: 100%;
  }
</style>

