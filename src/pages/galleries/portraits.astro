---
import Layout from '../../layouts/Layout.astro';
import FilterableGallery from '../../components/FilterableGallery.tsx';
import portraitData from '../../data/portraits.json';
import type { GalleryImage } from '../../data/types';

const images = portraitData.images as GalleryImage[];
---

<Layout 
  title="People & Portraits Photography - Anu Photography"
  description={portraitData.category.description}
>
  <FilterableGallery images={images} category={portraitData.category.name} client:load />
</Layout>
