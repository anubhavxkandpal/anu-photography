---
import Layout from '../../layouts/Layout.astro';
import MasonryGallery from '../../components/MasonryGallery.tsx';
import portraitData from '../../data/portraits.json';
import type { GalleryImage } from '../../data/types';

// Sort images: tier 1 first, then 2, then 3; within each tier, newest first
const sortedImages = [...portraitData.images].sort((a, b) => {
  if (a.tier !== b.tier) {
    return a.tier - b.tier;
  }
  return new Date(b.date).getTime() - new Date(a.date).getTime();
}) as GalleryImage[];
---

<Layout 
  title="Portrait Photography - Anu Photography"
  description={portraitData.category.description}
>
  <MasonryGallery images={sortedImages} category={portraitData.category.name} client:load />
</Layout>
