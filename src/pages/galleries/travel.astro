---
import Layout from '../../layouts/Layout.astro';
import FilterableGallery from '../../components/FilterableGallery.tsx';
import ParallaxHero from '../../components/ParallaxHero.tsx';
import travelData from '../../data/travel.json';
import type { GalleryImage } from '../../data/types';

const images = travelData.images as GalleryImage[];

// Hero image - Desert Fort (tier 1, dramatic travel shot)
const heroImage = "/images/optimized/landscapes/A7400596.jpg";
---

<Layout
  title="Travel Photography - Anu Photography"
  description={travelData.category.description}
>
  <!-- Parallax Hero -->
  <ParallaxHero
    client:load
    imageSrc={heroImage}
    title="TRAVEL"
    subtitle="Places & Journeys"
  />

  <!-- Content that scrolls over the hero -->
  <div class="relative z-10 bg-white min-h-screen">
    <!-- Subtle top edge shadow for depth -->
    <div class="absolute inset-x-0 -top-8 h-8 bg-gradient-to-b from-transparent to-black/10 pointer-events-none"></div>

    <!-- Rounded top corners for elegance -->
    <div class="bg-white rounded-t-3xl pt-16 pb-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Section intro -->
        <div class="text-center mb-12">
          <p class="text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">
            Exploring the world through the lens â€” from ancient temples to desert fortresses,
            capturing the spirit of places and the stories they hold.
          </p>
        </div>

        <!-- Gallery -->
        <FilterableGallery
          client:load
          images={images}
          category={travelData.category.name}
        />

      </div>
    </div>
  </div>

</Layout>

<style>
  /* Ensure the fixed hero doesn't cause horizontal scroll */
  :global(body) {
    overflow-x: hidden;
  }

  /* Smooth scroll behavior */
  :global(html) {
    scroll-behavior: smooth;
  }
</style>
