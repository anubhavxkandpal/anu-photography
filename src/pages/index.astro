---
import Layout from '../layouts/Layout.astro';
import HeroSlideshow from '../components/HeroSlideshow.tsx';
---

<Layout 
  title="Anu Photography - Professional Photography Portfolio"
  description="Professional photography portfolio featuring landscapes, wildlife, portraits, travel, and artistic photography from across India."
>
  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Hero Background Slideshow -->
    <HeroSlideshow client:load />
    <div class="relative z-10 text-center text-white px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl md:text-7xl font-heading font-bold mb-6">
        Anu Photography
      </h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
        Capturing life's most beautiful moments through the lens of creativity and passion
      </p>
      <div class="space-x-4">
        <a 
          href="/explore" 
          class="inline-block bg-earth-400 text-white px-8 py-3 rounded-lg font-semibold hover:bg-earth-500 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Explore Gallery
        </a>
        <a 
          href="/contact" 
          class="inline-block border-2 border-earth-400 text-earth-400 px-8 py-3 rounded-lg font-semibold hover:bg-earth-400 hover:text-white transition-all duration-300"
        >
          Book Session
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Categories -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-heading font-bold text-gray-900 mb-4">
        Photography Collections
      </h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Explore different styles and subjects through curated collections
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Landscapes -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
        <a href="/galleries/landscapes" class="block">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <img 
              src="/images/optimized/landscapes/kalga_DSC_7632.jpg" 
              alt="Nature & Landscapes Photography"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                Nature & Landscapes
              </h3>
              <p class="text-white/80 text-sm">
                Mountains, valleys, and natural vistas
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Wildlife -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
        <a href="/galleries/wildlife" class="block">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <img 
              src="/images/optimized/portraits/ANU00159.jpg" 
              alt="Wildlife Photography"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                Wildlife
              </h3>
              <p class="text-white/80 text-sm">
                Birds, animals, and creatures
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Portraits -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
        <a href="/galleries/portraits" class="block">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <img 
              src="/images/optimized/portraits/IMG_9589-Edit.jpg" 
              alt="Portrait Photography"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                People & Portraits
              </h3>
              <p class="text-white/80 text-sm">
                Human subjects and expressions
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Travel -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
        <a href="/galleries/travel" class="block">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <img 
              src="/images/optimized/landscapes/A7400596.jpg" 
              alt="Travel Photography"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                Travel
              </h3>
              <p class="text-white/80 text-sm">
                Places, streets, and journeys
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Artsy -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300">
        <a href="/galleries/artsy" class="block">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <img 
              src="/images/optimized/artsy/DIV2510.jpg" 
              alt="Artistic Photography"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                Creative & Artsy
              </h3>
              <p class="text-white/80 text-sm">
                Abstract and experimental work
              </p>
            </div>
          </div>
        </a>
      </div>

      <!-- Explore All -->
      <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 bg-gradient-to-br from-earth-400 to-forest-600">
        <a href="/explore" class="block">
          <div class="aspect-[4/3] flex items-center justify-center">
            <div class="text-center p-6">
              <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-white/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <h3 class="text-white font-heading font-semibold text-xl mb-2">
                Explore All
              </h3>
              <p class="text-white/80 text-sm">
                Browse & filter the complete collection
              </p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- About the Photographer Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-12 items-center">
        <div class="mb-8 lg:mb-0">
          <h2 class="text-4xl font-heading font-bold text-gray-900 mb-6">
            Behind the Lens
          </h2>
          <p class="text-gray-600 text-lg mb-6">
            Every photograph tells a story, and I'm passionate about capturing the moments that matter most. 
            With years of experience in landscape, portrait, and artistic photography, I bring a unique 
            perspective to every shoot.
          </p>
          <p class="text-gray-600 mb-8">
            From the serene beauty of natural landscapes to the intimate expressions in portraits, 
            my goal is to create images that not only document moments but evoke emotions and 
            preserve memories for generations to come.
          </p>
          <a 
            href="/about" 
            class="inline-block bg-forest-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-forest-800 transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            Learn More About Me
          </a>
        </div>
        <div class="relative">
          <div class="aspect-[3/4] overflow-hidden rounded-2xl shadow-2xl">
            <img 
              src="/images/optimized/artsy/IMG_0536-Edit.jpg" 
              alt="Artistic Portrait Photography" 
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gray-900 rounded-full opacity-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 bg-earth-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-5xl font-heading font-bold text-forest-800 mb-6">
          Let's Create Something Beautiful Together
        </h2>
        <p class="text-forest-600 text-xl max-w-3xl mx-auto leading-relaxed">
          Every moment deserves to be remembered. Whether it's your love story, personal brand, or life's celebrations, 
          I'm here to transform fleeting moments into timeless treasures.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <!-- Portrait Sessions -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
          <div class="aspect-[4/3] bg-sage-100 overflow-hidden">
            <img 
              src="/images/optimized/portraits/IMG_9589-Edit.jpg" 
              alt="Portrait Photography" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-forest-900/90 via-forest-900/40 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <h3 class="text-white font-heading font-bold text-2xl mb-4">
                Portrait Sessions
              </h3>
              <p class="text-white/90 text-lg mb-4 leading-relaxed">
                You are unique, and your portraits should reflect that. Whether for personal branding, family memories, or 
                professional needs, I create portraits that reveal your authentic self.
              </p>
              <p class="text-earth-200 text-sm mb-6">
                Personal Branding • Family Portraits • Professional Headshots
              </p>
              <a 
                href="/contact" 
                class="inline-block bg-sage-400 hover:bg-sage-500 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                Book Your Session
              </a>
            </div>
          </div>
        </div>

        <!-- Fine Art Prints -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
          <div class="aspect-[4/3] bg-sage-100 overflow-hidden">
            <img 
              src="/images/optimized/landscapes/IMG_0107-Edit.jpg" 
              alt="Fine Art Prints" 
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
              loading="eager"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-forest-900/90 via-forest-900/40 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <h3 class="text-white font-heading font-bold text-2xl mb-4">
                Fine Art Prints
              </h3>
              <p class="text-white/90 text-lg mb-4 leading-relaxed">
                Transform your space with breathtaking landscape and nature photography. Museum-quality prints 
                that bring the beauty of nature into your home or office.
              </p>
              <p class="text-earth-200 text-sm mb-6">
                Museum Quality • Custom Sizing • Professional Framing Available
              </p>
              <a 
                href="/galleries/landscapes" 
                class="inline-block bg-earth-600 hover:bg-earth-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl"
              >
                Shop Prints
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-24 bg-forest-900 text-white relative overflow-hidden">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-heading font-bold mb-6">
        Ready to Capture Your Story?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Let's work together to create beautiful, memorable photographs that you'll treasure for years to come.
      </p>
      <div class="space-x-4">
        <a 
          href="/contact" 
          class="inline-block bg-earth-400 hover:bg-earth-500 text-white px-10 py-4 rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl text-lg"
        >
          Start Your Journey
        </a>
        <a 
          href="/about" 
          class="inline-block border-2 border-earth-400 text-earth-400 hover:bg-earth-400 hover:text-white px-10 py-4 rounded-lg font-semibold transition-all duration-300 text-lg"
        >
          Meet Anu
        </a>
      </div>
    </div>
  </section>
</Layout>
